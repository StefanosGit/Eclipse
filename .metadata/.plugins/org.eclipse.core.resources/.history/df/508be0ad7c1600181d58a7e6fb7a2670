package br.com.stef.eclipse.exercicio1;

import javax.swing.JFrame;
import javax.swing.JOptionPane;


public class Exercicio1 {
	
	
	
	public static void main(String[] args) {
		
		Personal personal1 = new Personal();
		
		personal1.setName(JOptionPane.showInputDialog("Enter your name"));
		personal1.setLastName(JOptionPane.showInputDialog("Enter your last name"));
		personal1.setAge(Integer.getInteger(JOptionPane.showInputDialog("Enter your age")));
		while (personal1.getAge()<=18) {
			
			JOptionPane.showMessageDialog(new JFrame(),"The age must be above 18");
			//personal1.setAge(Integer.getInteger(JOptionPane.showInputDialog("Enter your age")));
			
		}
		
		
		
		
	}

}
